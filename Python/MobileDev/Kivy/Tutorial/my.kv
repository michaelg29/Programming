<Button>:
    font_size: 40
    color: 0.8, 0.6, 0.7, 1
    size_hint: 0.3, 0.2

<FloatLayout>:
    Button:
        pos_hint: {"x":0.5, "top":1}
        text: "Btn1"
    
    Button:
        id: btn2
        text: "Btn2" if btn2.state == "normal" else "Down"
        pos_hint: {"y":0.3}
        background_color: 0.3,0.4,0.5,1

<MyGrid>
    fname: fname
    lname: lname
    email: email

    GridLayout:
        cols: 1
        pos: 100, 100
        size: root.width - 200, root.height - 200

        GridLayout:
            cols: 2

            Label:
                text: "First name:"

            TextInput:
                id: fname
                multiline: False
            
            Label:
                text: "Last name:"

            TextInput:
                id: lname
                multiline: False

            Label:
                text: "Email:"

            TextInput:
                id: email
                multiline: False
        
        Button:
            text: "Submit"
            on_press: root.btn()

<Touch>:
    btn: btn

    Button:
        id: btn
        text: "My button"